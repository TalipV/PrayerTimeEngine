<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:PrayerTimeEngine.Presentation.ViewModel"
             xmlns:uraniumMaterial="clr-namespace:UraniumUI.Material.Controls;assembly=UraniumUI.Material"
             x:DataType="viewModel:DatabaseTablesPageViewModel"
             x:Class="PrayerTimeEngine.Views.DatabaseTablesPage">

    <NavigationPage.TitleView>
        <Picker
            ItemsSource="{Binding TableOptions}"
            SelectedItem="{Binding SelectedTableOption}"/>
    </NavigationPage.TitleView>

    <ScrollView Orientation="Both" Margin="10">
        <uraniumMaterial:DataGrid x:Name="dataGrid">
            
        </uraniumMaterial:DataGrid>
    </ScrollView>

</ContentPage>